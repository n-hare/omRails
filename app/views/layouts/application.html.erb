<!DOCTYPE html>
<html>
  <head>
    <title>One Month Rails Project</title>
    <%= csrf_meta_tags %>


    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-toggleable-md navbar-light bg-light align-baseline">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarToggle" aria-controls="navbarToggle" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to 'Quae', root_path, class:"navbar-brand mb-0"  %>
      <div class="collapse navbar-collapse container justify-content-between mt-1" id="navbarToggle">
        <ul class="nav navbar-nav">
          <li class='nav-item'> <%= link_to 'Home', root_path,   class:"nav-link"  %> </li>
          <li class='nav-item'> <%= link_to 'About', about_path,  class:"nav-link" %> </li>
          <li class='nav-item'> <%= link_to 'Contact', contact_path,  class:"nav-link" %> </li>
          
        </ul>
        <ul class='nav navbar-nav'>

          <% if user_signed_in? %>
            <li class='nav-item'> <%= link_to 'Log Out', signout_path, method: :delete, class:"nav-link" %> </li>

          <% else %>

            <li class='nav-item'> <%= link_to 'Sign Up', signup_path, class:"nav-link" %> </li>
            <li class='nav-item'> <%= link_to 'Sign In', signin_path, class:"nav-link btn btn-info" %></li>
        
          <% end %> 

        </ul>
      </div>
    </nav>
        <!-- Flash Messages -->
        <% flash.each do |name, message| %>
          <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
        <% end  %>
        <div class="container" id='main'>
            <%= yield %>
        </div> 
   <!-- Footer -->
    <footer class="small text-muted fixed-bottom">
      <div class="container">
        <hr>
        <center>
          <p>Â© <span id='year'></span> Nate Hare</p>
        </center>
      </div>
    </footer> 
    <script type="text/javascript">
      var currentYear = new Date().getFullYear();
      document.getElementById('year').innerText = currentYear;
    </script>
  </body>
</html>
